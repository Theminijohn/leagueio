<h2>Edit Profile</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :avatar_file_size, class: "alert alert-error" %>
  <%= f.full_error :avatar_content_type, class: "alert alert-error" %>


  <ul id="userprofiletab" class="nav nav-tabs">
    <li class="active">
      <a href="#info" data-toggle="tab">
        Info
      </a>
    </li>
    <li class="">
      <a href="#social" data-toggle="tab">
        Social
      </a>
    </li>
    <li class="">
      <a href="#account" data-toggle="tab">
        Account
      </a>
    </li>
    <li class="">
      <a href="#cancel" data-toggle="tab">
        Cancel
      </a>
    </li>
  </ul>

  <div id="myTabContent" class="tab-content">


    <div class="tab-pane fade active in" id="info">
      <%= f.input :avatar %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :user_name, disabled: true %>
    </div>

    <div class="tab-pane fade" id="social">
      <%= f.input :lolking_link %>
      <%= f.input :facebook_link %>
      <%= f.input :twitter_link %>
      <%= f.input :website %>
    </div>

    <div class="tab-pane fade" id="account">
      <%= f.input :email %>
      <%= f.input :password, label: "New Password", autocomplete: "off" %>
      <%= f.input :password_confirmation, label: "New Password Confirmation", autocomplete: "off" %>
    </div>

    <div class="tab-pane fade" id="cancel">
      <a href="#DeleteAccount" role="button" class="btn btn-info" data-toggle="modal">
        Cancel my Account</a>
    </div>

  </div>


  <div class="form-actions">
    <%= f.submit "Update", class: "btn btn-primary"%>
  </div>
<% end %>


<%= link_to "Back", :back %>

<div id="DeleteAccount" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close fui-cross" data-dismiss="modal" aria-hidden="true"></button>
    <h3>Delete your Account</h3>
  </div>
  <div class="modal-body">
    <p>
      Attention!
      <br>
      <br>
      Your account will be fully deleted and you will have no longer access
      to your points, Badges or Privileges.
      <br>
      <br>
      Although your Question's will not be deleted, your user name will no longer
      show up.
      <br>
      <br>
      You can not recover your account once deleted.
    </p>
  </div>
  <div class="modal-footer">
    <%= link_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger", :data => { :confirm => "Are you sure?" }, :method => :delete %>
  </div>
</div>