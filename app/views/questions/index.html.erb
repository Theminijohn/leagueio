<% if user_signed_in? %>
  <div class="row-fluid">

    <div class="span9">
      <%= render @questions %>
    </div>

    <div class="span3">

      <div class="index_wlcm_beta">
        Welcome to the closed Beta <br>
        <%= current_user.first_name %>
        <br>
        <br>
        Feel free to roam around <br>
        and give us Feedback
      </div>

      <br><br><br><br><br>

      <div class="hero_logo">
        <%= link_to updates_path, :rel => "tooltip", "data-original-title" => "We've launched our new Blog" do  %>
        <div id="outline">
          <div id="inner-outline">
            <span class="fui-bubble"></span>
          </div>
        </div>
        <% end %>
      </div>


    </div>

  </div>
<% else %>
  <section class="home-hero">
    <div class="hero-content">
      <div class="row">
        <div class="span8 offset2">
          <hgroup>
            <h1><br><br></h1>
            <br>
            <h2>
              League I/O is a question and answer site
              for professional and enthusiast League of Legends
              Players.
            </h2>
          </hgroup>
        </div>
      </div>

      <div class="row">

        <%= link_to "Sign up for the Beta", new_user_registration_path, class: "btn btn-info btn-huge" %>

      </div>
    </div>
  </section>
<% end %>









