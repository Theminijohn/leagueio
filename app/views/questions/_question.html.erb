
<div class="question-summary narrow">
  <%= link_to question do %>
    <div class="cp">

      <!--Votes-->
      <div class="votes">
        <div class="mini-counts">
          <%= question.votes_count %>
        </div>
        <div>
          <% if question.votes_count == 1 %>
            Vote
          <% else %>
            Votes
          <% end %>
        </div>
      </div>
      <!--Votes End-->

      <!--Answers-->
      <% if question.answers.count == 0 %>
        <div class="status unanswered ">
          <div class="mini-counts"><%= question.answers.count %></div>
          <div>answers</div>
        </div>
      <% else %>
        <div class="status">
          <div class="mini-counts"><%= question.answers.count %></div>
          <div>
            <% if question.answers.count == 1 %>
              answer
            <% else %>
              answers
            <% end %>
          </div>
        </div>
      <% end %>
      <!--Answers End-->

      <!--Views-->
      <div class="views">
        <% if question.impressionist_count(:filter=>:ip_address) > 100 %>
          <div class="mini-counts hot"><%= question.impressionist_count(:filter=>:ip_address) %></div>
          <div class="hot">views</div>
        <% else %>
          <div class="mini-counts"><%= question.impressionist_count(:filter=>:ip_address) %></div>
          <div>
            <% if question.impressionist_count(:filter=>:ip_address) == 1 %>
              View
            <% else %>
              Views
            <% end %>
          </div>
        <% end %>
      </div>
      <!--Views End-->

    </div>
  <% end %>


  <div class="summary">
    <p>
      <b>
        <%= link_to question.title, question %>
      </b>
    </p>

    <div class="question-tags pull-left">
      <% question.tags.each do |tag| %>
        <span class="label label-default">
          <%= link_to tag.name, tag_path(tag.name) %>
        </span>
      <% end %>
    </div>

    <div class="started">

      <span class="relativetime">
        <%= time_ago_in_words(question.created_at) %> ago
      </span>

      <%= link_to question.user.user_name, question.user %>
      <span class="reputation-score" title="reputation score">
        <%= question.user.points %>
      </span>

    </div>
  </div>

</div>

<div class="clearfix"></div>